{
  "name": "tp04-back",
  "private": true,
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:test": "DOTENV_CONFIG_PATH=.env.test tsx watch src/index.ts",
    "dev:prod": "DOTENV_CONFIG_PATH=.env.prod tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "start:test": "DOTENV_CONFIG_PATH=.env.test node dist/index.js",
    "start:prod": "DOTENV_CONFIG_PATH=.env.prod node dist/index.js",
    "test": "npm run test:unit",
    "test:unit": "vitest run src/tasks/tasks.service.unit.test.ts",
    "test:integration": "DOTENV_CONFIG_PATH=.env.test vitest run \"src/app.test.ts\"",
    "test:env": "npm run test:integration"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  }
}
